{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Redmine Dashboard",
  "version": "0.5.0",
  "identifier": "com.k90325248.redmine-dashboard",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Redmine Dashboard",
        "width": 1080,
        "height": 720,
        "minWidth": 500,
        "minHeight": 480,
        "center": true,
        "visible": false
      },
      {
        "label": "quick",
        "title": "Quick Entry",
        "url": "/quick-time",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "width": 750,
        "height": 510,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "k90325248",
    "copyright": "Copyright Â© 2026",
    "shortDescription": "A Redmine Dashboard for tracking issues and time.",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI0RkVBOEE3MTRCM0MyNkMKUldSc3dyTVVwNmorSk5BRmp1Z0NOTHhVUmVwV29wZDVuSFFRWlFPV2hPL1BVN3ZWM0hrWW80OVQK",
      "endpoints": [
        "https://filedn.eu/l2hWWRTMACJms0Tw2qwPeBm/RedmineDashboard/update.json"
      ]
    }
  }
}
